{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src/main/ts",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "rootDir": "./src/test/ts",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
  },
  "exclude": [
    "./node_modules",
    "./dist",
    "./src/test/ts"
  ],
  "include": [
    "./src/main/ts"
  ]
}
